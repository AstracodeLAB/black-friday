---
import '../styles/global.scss';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookiesBanner from '../components/CookiesBanner.astro';

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <link rel='canonical' href='https://blackfriday2025.astracodelab.com/' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='icon' type='image/svg+xml' href='/images/blanco.svg' />

    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Anton&family=Barlow+Condensed:wght@300;400&family=Barlow:wght@400&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-NK2JFCLS');
    </script>
    <!-- End Google Tag Manager -->
  </head>

  <body class='body'>
    <!-- {/* Formulario oculto para que Netlify lo pille */} -->
    <form name='discount' netlify hidden>
      <input type='email' name='email' />
    </form>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src='https://www.googletagmanager.com/ns.html?id=GTM-NK2JFCLS'
        height='0'
        width='0'
        style='display:none;visibility:hidden'></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <div class='container'>
      <Header />
      <slot />
      <Footer />
      <CookiesBanner />
    </div>
  </body>
</html>

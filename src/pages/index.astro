---
import '../styles/global.scss';
import { cardData } from '../assets/data';
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';
import Countdown from '../components/Countdown';
import Button from '../components/Button.astro';
---

<Layout
	title='Ofertas Black Friday en AstracodeLAB - Diseño y Desarrollo Web'
	description='Aprovecha nuestras ofertas de Black Friday para tu Landing Page o Portfolio. Contrata diseño y desarrollo web profesional y gana visibilidad para tu negocio.'
>
	<main class='main'>
		<p>HOLA</p>
		<section class='services'>
			{cardData.map((card) => <Card {...card} />)}
		</section>
		<section class='counter'>
			<Countdown />
			<Button />
		</section>
	</main>
</Layout>
